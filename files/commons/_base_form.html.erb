<% form_for(@resource,
            :builder => AdminBuilder,
            :url => path_to_index,
            :html => html) do |f| %>

  <%= render :partial => "form", :locals => {:f => f} %>

  <div class="actions">
    <%= submit_tag 'Guardar estos cambios' %> o
    <%= link_to 'Cancelar', path_to_index %>
  </div>
<% end %>
